{% extends 'base.html.twig' %}

{% block title %}Personage{% endblock %}
	{% block stylesheets %}{% endblock %}

{% block body %}
	<h2 class="m-2 p-2 text-white text-center bg-primary rounded"> My {{ weapon.name }} </h2>
	<div class="row">
		<div class="col-2">
			<img src="{{ asset('images/weapons/' ~ weapon.name ~ '.png') }}" alt="Weapon"/>
		</div>
		<div class="col-3 mt-3 ml-4">
			<h3>{{ weapon.name }}</h3>
			<h3>The Details</h3>	
			<ul>
				<li>Description : {{ weapon.detail.description }}</li>
				<li>Damage : {{ weapon.detail.damage }}</li>
			</ul>	
			
		</div>
	</div>
	
{% endblock %}
